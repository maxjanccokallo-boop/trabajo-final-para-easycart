<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permite acceso a archivos creados en la carpeta /Android/data/... -->
    <external-files-path
        name="external_files"
        path="." />

    <!-- Opcional: Permite compartir archivos desde /storage/emulated/0/Download -->
    <external-path
        name="external_storage"
        path="Download/" />

</paths>
